<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.lovetime.mapper.HeartWallProjectMapper">
    
    <resultMap type="HeartWallProject" id="HeartWallProjectResult">
        <result property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="projectName" column="project_name"/>
        <result property="description" column="description"/>
        <result property="photoCount" column="photo_count"/>
        <result property="maxPhotos" column="max_photos"/>
        <result property="coverPhotoUrl" column="cover_photo_url"/>
        <result property="isPublic" column="is_public"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>
    
    <sql id="selectHeartWallProjectVo">
        select id, user_id, project_name, description, photo_count, max_photos, cover_photo_url, is_public, created_at, updated_at from at_heart_wall_projects
    </sql>
    
    <select id="selectHeartWallProjectList" parameterType="HeartWallProject" resultMap="HeartWallProjectResult">
        <include refid="selectHeartWallProjectVo"/>
        <where>
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="projectName != null  and projectName != ''"> and project_name like concat('%', #{projectName}, '%')</if>
            <if test="isPublic != null "> and is_public = #{isPublic}</if>
        </where>
        order by id desc
    </select>
    
    <select id="selectHeartWallProjectsByUserId" parameterType="map" resultMap="HeartWallProjectResult">
        <include refid="selectHeartWallProjectVo"/>
        where user_id = #{userId}
        order by created_at desc
    </select>
    
    <select id="selectHeartWallProjectById" parameterType="Long" resultMap="HeartWallProjectResult">
        <include refid="selectHeartWallProjectVo"/>
        where id = #{id}
    </select>
    
    <insert id="insertHeartWallProject" parameterType="HeartWallProject" useGeneratedKeys="true" keyProperty="id">
        insert into at_heart_wall_projects
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="projectName != null and projectName != ''">project_name,</if>
            <if test="description != null">description,</if>
            <if test="photoCount != null">photo_count,</if>
            <if test="maxPhotos != null">max_photos,</if>
            <if test="coverPhotoUrl != null">cover_photo_url,</if>
            <if test="isPublic != null">is_public,</if>
            <if test="createdAt != null">created_at,</if>
            <if test="updatedAt != null">updated_at,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="projectName != null and projectName != ''">#{projectName},</if>
            <if test="description != null">#{description},</if>
            <if test="photoCount != null">#{photoCount},</if>
            <if test="maxPhotos != null">#{maxPhotos},</if>
            <if test="coverPhotoUrl != null">#{coverPhotoUrl},</if>
            <if test="isPublic != null">#{isPublic},</if>
            <if test="createdAt != null">#{createdAt},</if>
            <if test="updatedAt != null">#{updatedAt},</if>
        </trim>
    </insert>
    
    <update id="updateHeartWallProject" parameterType="HeartWallProject">
        update at_heart_wall_projects
        <set>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="projectName != null and projectName != ''">project_name = #{projectName},</if>
            <if test="description != null">description = #{description},</if>
            <if test="photoCount != null">photo_count = #{photoCount},</if>
            <if test="maxPhotos != null">max_photos = #{maxPhotos},</if>
            <if test="coverPhotoUrl != null">cover_photo_url = #{coverPhotoUrl},</if>
            <if test="isPublic != null">is_public = #{isPublic},</if>
            <if test="createdAt != null">created_at = #{createdAt},</if>
            updated_at = #{updatedAt},
        </set>
        where id = #{id}
    </update>
    
    <delete id="deleteHeartWallProjectById" parameterType="Long">
        delete from at_heart_wall_projects where id = #{id}
    </delete>
    
    <delete id="deleteHeartWallProjectByIds" parameterType="Long">
        delete from at_heart_wall_projects where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>